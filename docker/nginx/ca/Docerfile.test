FROM nginx:1.15.8

ADD docker/nginx/ca/csr_create.sh /etc/ssl/ca/csr_create.sh
RUN apt-get update \
  && apt-get install -y \
       openssl \
       expect \
  && cd /etc/ssl/ca \
  && openssl genrsa -out server.key 2024 \
  && ./csr_create.sh \
  && ls -l \
  && openssl x509 -req -days 3650 -signkey server.key -in server.csr -out server.crt
