<div class="container mt-3">
  <div class="row">
    <div class="col-sm text-center">
      <% if notice.present? %>
        <p class="alert alert-secondary"><%= notice %></p>
      <% elsif alert.present? %>
        <p class="alert alert-danger"><%= alert %></p>
      <% end %>
    </div>
  </div>
</div>