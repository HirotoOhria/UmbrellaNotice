<% if locals[:weather].today_is_rainy? %>
  <%= current_date %>

  今日は雨が降ります！
  傘を持てば何とやら！

  --------------------------------
  時刻       天気     雨量
  <% locals[:weather].forecast[:hourly][0...Weather::TAKE_WEATHER_HOUR].each do |hourly| %>
    <% hour_time  = Time.zone.at(hourly[:dt]).hour.to_s.rjust(2,'0') %>
    <% emoji_code = emoji[hourly[:weather][0][:main].downcase.to_sym] %>
    <% rain_fall  = hourly[:rain][:'1h'] %>

    <%= hour_time %>時 ･･･  <%= emoji_code %>    <%= rain_fall.round %> [mm]
  <% end %>
  --------------------------------
<% else %>
  <% unless locals[:line_user].silent_notice %>
    <%= current_date %>

    今日は雨は降りません！
    良い一日をお過ごしください！

    --------------------------------
    時刻       天気     雨量
    <% locals[:weather].forecast[:hourly][0...Weather::TAKE_WEATHER_HOUR].each do |hourly| %>
      <% hour_time  = Time.zone.at(hourly[:dt]).hour.to_s.rjust(2,'0') %>
      <% emoji_code = emoji[hourly[:weather][0][:main].downcase.to_sym] %>
      <% rain_fall  = hourly[:rain][:'1h'] %>

      <%= hour_time %>時 ･･･  <%= emoji_code %>    <%= rain_fall.round %> [mm]
    <% end %>
    --------------------------------
  <% end %>
<% end %>
